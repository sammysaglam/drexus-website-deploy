{
  "name": "drexus",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p ${DREXUS_WEBSITE_PORT:-3000}",
    "build": "next build --turbopack",
    "start": "next start -p ${DREXUS_WEBSITE_PORT:-3000}",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,mdx,json}\"",
    "type-check": "tsc --noEmit",
    "check:accessibility": "tsx scripts/accessibility-audit.ts",
    "check:mdx": "tsx scripts/validate-frontmatter.ts",
    "check:links": "tsx scripts/check-internal-links.ts",
    "check:actions": "tsx scripts/check-action-boxes.ts",
    "qa:all": "npm run lint && npm run type-check && npm run check:mdx && npm run check:accessibility"
  },
  "dependencies": {
    "@heroui/react": "^2.8.4",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.3",
    "framer-motion": "^12.23.16",
    "gray-matter": "^4.0.3",
    "next": "15.5.3",
    "next-mdx-remote": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/glob": "^8.1.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
